{
  "compilerOptions": {
    "downlevelIteration": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2017"],
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ]
}